<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn giao diện nền"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/background_1_preview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/background_1"
                android:scaleType="centerCrop"
                android:background="@drawable/background_selector"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background 1"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/background_2_preview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/background_2"
                android:scaleType="centerCrop"
                android:background="@drawable/background_selector"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background 2"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/background_3_preview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/background_3"
                android:scaleType="centerCrop"
                android:background="@drawable/background_selector"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background 3"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="#666666" />

</LinearLayout>
